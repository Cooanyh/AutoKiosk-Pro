{
  "name": "autokiosk-pro",
  "version": "1.4.0",
  "description": "Auto fullscreen browser with scheduled reminders and shutdown",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "clean": "if exist dist rmdir /s /q dist",
    "prebuild": "npm run clean",
    "build": "electron-builder --win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "kiosk",
    "electron",
    "fullscreen",
    "automation"
  ],
  "author": "Cooanyh",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.cooanyh.autokiosk-pro",
    "productName": "AutoKiosk-Pro",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "main.js",
      "preload.js",
      "settings.html",
      "reminder.js",
      "package.json"
    ]
  }
}